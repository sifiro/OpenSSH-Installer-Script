#!/bin/bash

function workdir (){
if [ ! -d /tmp/osi ];then mkdir /tmp/osi;
fi
workdir="/tmp/osi"
}

# Selecciona el Entorno 
function set_env(){
if [ ${check_status[0]} -eq 0 ];then package="emerge" purge="-cav" update="--sync" instal="-a" package="net-misc/openssh"
elif [ ${check_status[0]} -eq 1 ] || [ ${check_status[0]} -eq 2 ];then pm="apt-get" purge="purge" update="update" instal="-y install" package="openssh-server"
fi
}

##Metodo de Subida de Privilegios
function su_metodo (){
if type gksu > /dev/null 2>/dev/null;then gksu -S $1
else
	if type sudo > /dev/null 2>/dev/null;then sudo $1
else echo "Escriba la ContraseÃ±a de Root"; su -c $1;
fi
fi
}

## Funcion de Testeo de Conexion a Internet
function wan_check(){
ping -c2 8.8.8.8 >/dev/null 2> /dev/null
if [ $? -eq 0 ]
then $1
fi
}
# Funcion de comprobacion basica de ip validas
function ip_check (){
ip_invalid=-1;
local tmp=(`echo $1 | tr "." " "`)
for((i=1; i<${#tmp[*]}; ++i))
do
echo $ip_invalid
if [ ! ${tmp[i]} -lt 0 ] || [ ${tmp[i]} -gt 255 
];then 
ip_invalid=1;break;
fi
ip_invalid=0
done
}
## Comprueba que el Usuario Exista
function user_check (){
local users=(`cat /etc/passwd | cut -d":" -f1 | tr "\n" " "`);
for((i=0;i<${#users[*]};++i))
do
if [ "${users[i]}" = "$1" ];then user=1;break;
fi
user=0
done
}
##Sustitucion automatica.
function sust (){
if [ `grep -Fxq "^$1" $3` ];then
sed "/^$1/ c$1=(${$2[*]})" $tmp > $workdir/tmp; cat $workdir/tmp
else echo "$1 $2" >> $3
fi
}
workdir
